CREATE DATABASE controle_financeiro;

CREATE TABLE pagamentos(
    id_pagamentosint(1) primary key AUTO_INCREMENT,
    descricao varchar(100),
    valor double,
    data_recebimento varchar(2),
    id_mes int
)

CREATE TABLE mes(
    id_mes int primary key AUTO_INCREMENT, 
    descricao varchar(50)
)

CREATE TABLE contas_a_pagar(
    id_contas int primary key AUTO_INCREMENT, 
    tipo varchar (100),
    descricao varchar(100),
    valor double,
    data_vencimento varhcar(2),
    id_mes int
)
ALTER TABLE pagamentos ADD CONSTRAINT FK_ID_MES
FOREIGN KEY(id_mes) references mes.id_mes

ALTER TABLE contas_a_pagar ADD CONSTRAINT FK_ID_MES
FOREIGN KEY(id_mes) references mes.id_mes


INSERT INTO MES (descricao) values('Janeiro');